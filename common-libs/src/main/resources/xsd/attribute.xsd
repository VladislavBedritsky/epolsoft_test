<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:tns="http://example.org/xsd/attribute"
           targetNamespace="http://example.org/xsd/attribute"
           elementFormDefault="qualified">

    <!--Find All-->
    <xs:element name="getAllAttributesRequest">
        <xs:complexType>
            <xs:sequence>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getAllAttributesResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="findAll" type="tns:attributeDTO" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!-- Find by name -->
    <xs:element name="getAttributeByNameRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="name" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getAttributeByNameResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="attributeDTO" type="tns:attributeDTO"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>


    <!--Delete-->
    <xs:element name="getDeleteAttributeRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="name" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="getDeleteAttributeResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="serviceStatus" type="tns:serviceStatus"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!--Update-->
    <xs:element name="getUpdateAttributeRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="attributeDTO" type="tns:attributeDTO"></xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="getUpdateAttributeResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="serviceStatus" type="tns:serviceStatus"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!--Add-->
    <xs:element name="getAddAttributeRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="attributeDTO" type="tns:attributeDTO"></xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getAddAttributeResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="serviceStatus" type="tns:serviceStatus"/>
                <xs:element name="attributeDTO" type="tns:attributeDTO"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="attributeDTO">
        <xs:sequence>
            <xs:element name="name" type="xs:string"/>
            <xs:element name="value" type="xs:string"/>
            <xs:element name="description" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="serviceStatus">
        <xs:sequence>
            <xs:element name="statusCode" type="xs:string"/>
            <xs:element name="message" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>